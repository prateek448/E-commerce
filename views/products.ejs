    <script>
      function search() {
        let filter = document.getElementById('myinput').value.toUpperCase();
        let ul = document.getElementById('myul');
        let pi = ul.getElementsByClassName('productname');
        document.getElementById('low').style.display = "none";
        document.getElementById('banner').style.display = "none";
        let ul1 = document.getElementById('myul1');
        let pi1 = ul1.getElementsByClassName('productname');
        for (var i = 0; i < pi.length; i++) {
          let a = pi[i];
          let textvalue = a.textContent || a.innerHTML;
          if (textvalue.toUpperCase().indexOf(filter) > -1) {
            document.getElementById(textvalue).style.display = "";

          } else {
            document.getElementById(textvalue).style.display = "none";
          }
        }
        for (var i = 0; i < pi1.length; i++) {
          let a = pi1[i];
